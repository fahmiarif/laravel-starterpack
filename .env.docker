# ──────────────────────────────
# Application
# ──────────────────────────────
APP_NAME="E-Billing"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ──────────────────────────────
# Logging
# ──────────────────────────────
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ──────────────────────────────
# Database (PostgreSQL Container)
# ──────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=ebilling
DB_USERNAME=ebilling
DB_PASSWORD=your_strong_password_here

# Direct connection (same as DB for Docker)
DB_DIRECT_HOST=db
DB_DIRECT_PORT=5432

# ──────────────────────────────
# Redis
# ──────────────────────────────
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ──────────────────────────────
# Session & Cache (use Redis)
# ──────────────────────────────
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ──────────────────────────────
# Mail (configure your SMTP)
# ──────────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ──────────────────────────────
# Vite
# ──────────────────────────────
VITE_APP_NAME="${APP_NAME}"

# ──────────────────────────────
# Docker-specific
# ──────────────────────────────
APP_PORT=80
DB_PORT_FORWARD=5432
